[global]
repo1-path={{ repo1_path }}
repo1-retention-full=2
repo1-retention-diff=15
log-path={{ local_dmk_path }}log
log-level-file=detail
spool-path=/tmp
start-fast=y
archive-async=y
expire-auto=y
compress=n
#compress-type=bz2
process-max=2

[{{ stanza }}]

{% for h in ansible_play_hosts %}
pg{{ loop.index  }}-path={{ pgdata }}
pg{{ loop.index  }}-host={{ hostvars[h]['ansible_default_ipv4']['address'] }}
pg{{ loop.index  }}-user={{ postgres_user }}
pg{{ loop.index  }}-port={{ postgres_port }}
{% endfor -%}
